# Editor configuration, see http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
insert_final_newline = false
trim_trailing_whitespace = false
tab_width = 2
end_of_line = lf

[*.{js,ts,fs,css,json,jsx,tsx,rc,*rc,*ignore,*config}]
indent_size = 2

[*.md]
max_line_length = off

[*.{html,htm,xul,xml,csproj,targets}]
indent_size = 2
tab_width = 2

[*.yml]
indent_size = 2
tab_width = 2
